/* Internet Explorer 8 Hacks - because we have to... but not for long */

.ie8 #dl-menu { display: none;}
.ie8 #ienav { display: block; }


ul#nav { margin-bottom: 0; text-align: center; list-style: none; height: 40px; background: {{ settings.navigation }}; }
ul#nav li { display: inline-block; position: relative; line-height: 40px;}
ul#nav li:hover { color: {{ settings.nav_hover_link_color }}; background: {{ settings.nav_hover_color }}; }

ul#nav li a {
    font-size: {{ settings.nav_size }};
	font-weight: {{ settings.nav_weight }};
    color: {{ settings.nav_color }};
    height: 40px;
    float: left;
    display: block;
    padding: 0 10px 0 10px;
    text-transform: {{ settings.navigation-transform }};
  	line-height: 40px;
}

ul#nav li a:hover {
    background: {{ settings.nav_hover_color }};
    color: {{ settings.nav_hover_link_color }};
    text-decoration: none;
}

ul#nav li ul{
    display: none;
	background: {{ settings.navigation }}! important;
    float: left;
    position: absolute;
    top: 40px;
    left: 0;
    z-index: 25;
    margin: 0;
    padding: 0;
}


ul#nav li:hover ul{
    display: block;
    background: {{ settings.nav_hover_color }}! important;
}

ul#nav li ul li{
    background: {{ settings.nav_hover_color }};
	color: {{ settings.nav_color }};
    white-space: nowrap;
    text-align: left! important;
    display: block;
    float: left;
    width: 100%;
   
}


ul#nav li ul li:hover {
    background: {{ settings.navigation }};
}

ul#nav li ul li a:hover {
	color: {{ settings.nav_color }};
  background: {{ settings.navigation }};
}

ul#nav li ul li a{
    text-align: left;
    padding-left: 10px;
    color: {{ settings.nav_color }};
	text-transform {{ settings.navigatio-transform }}! important;
}



.ie3col { float: left; width: 22%; margin-left: 1%; margin-right: 1%;  }
.ie4col  { float: left; width: 31%; margin-left: 1%; margin-right: 1%; }

.iefirst { clear: left; }